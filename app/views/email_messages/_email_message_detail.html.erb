<div class="message">
  <% if @email_message.present? && @email_message.user.image_file_name.present? %>
    <%= image_tag @email_message.user.image.url(:medium), style: "height: 105px;width: 100px;" %>
  <% else %>
    <%= image_tag 'noImg.jpg' %>
  <% end %>

  <div class="messDesc">
    <h2><%= @email_message.user.full_name.capitalize %></h2>
    <h3><%= @email_message.subject %></h3>
    <h4><% if time_diff_for_email_message(@email_message)[0] > 0 %><span><%= "%d " % "#{time_diff_for_email_message(@email_message)[0]}" %></span> days <% end %>
    </h4>
  </div><br/>
  <div class="messCont">
    <h3><%= @email_message.message %></h3>
  </div>
  <div class="messReply">
    <%= form_tag send_message_reply_path do |f| %>
      <%= hidden_field_tag :email_message_id, @email_message.id %>
      <%= text_area_tag :message, nil, :required => true, :placeholder=> "Send A Reply..." %>
      <!--<div class="messSend"><input type="submit" value="Reply"></div>-->
      <div class="messSend">
        <%= submit_tag "Reply", :onclick => 'if($("#message").val() == ""){alert("Please fill out this message box.")}' %>
      </div>
    <% end %>
  </div>
</div>
