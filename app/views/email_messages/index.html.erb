	});
	select_value = $('#foundation_user_email').val();
	$('#email').val(select_value);

	$('#new_email_message').submit(function(){
		if ($('#email_message_subject').val() == "") {
			$('#subject_error').show();
			return false;
		}
	});
	$('#new_email_message').submit(function(){
		if ($('#email_message_message').val() == "") {
			$('#send_reply_error').show();
			return false;
		}
	});
	$('#message_form').submit(function(){
		if ($('#message').val() == "") {
			$('#message_error').show();
			return false;
		}
	});
</script>
