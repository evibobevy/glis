	}
	#foundation_name_error{
		display: none;
	}
	#foundation_phone_number_error{
		display: none;
	}
/*password style */
	#user_success_message_password{
		display: none;
	}
	#user_blank_message_password{
		display: none;
	}
	#not_match_message_user_password{
		display: none;
	}
</style>