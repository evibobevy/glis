<header id="top-container">
  <div class="fixed-wrapper">
    <div class="logo"><%= image_tag('logo.png', alt: '') %></div>
    <div class="header-search">
      <form action="" method="get">
        <div class="hd-search-box">
          <input name="" type="text">
          <button class="search-icon"></button>
        </div>
        <span class="inspire-text">Inspire the world with good.</span>
      </form>
    </div>
    <% if user_signed_in? %>
      <div class="loged-rgt">
        <div class="after-login-icon">
          <ul>
            <li><a href="/event_list"><img src="/assets/date-icon.png" alt=""></a></li>
            <li>
              <a href="/users/edit"><img src="/assets/setting-icon.png" alt=""></a>
            </li>
            <li><a href="/inbox_notifications"><img src="/assets/email-icon.png" alt=""></a></li>
            <li><a href="#"><img src="/assets/add-icon.png" alt=""> </a></li>
          </ul>
        </div>
        <div class="loged-user">
          <!--<link_to <img src="/assets/after-user-img.jpg" alt="">-->
          <% if user_signed_in? && current_user.user_pictures.present? %><%= link_to image_tag("#{current_user.user_pictures.first.image.url}", :alt => '', :title => '', style: "height: 60px;width: 59px;"), root_path %><% else %><%= link_to image_tag("/assets/after-user-img.jpg", :alt => '', :title => ''), root_path %> <% end %>
          <span><% if user_signed_in? &&  current_user.first_name.present? %><%= current_user.first_name ||= 'Jameson' %><% end %></span>
        </div>
	      <%#= link_to "Change your password", edit_user_registration_path%>
        <%= link_to 'Sign out', destroy_user_session_path, :method => :get, :class => 'after-login-icon' %>
      </div>
    <% else %>
      <!--After login right section-->
      <div class="header-rgt-btn">
        <%= link_to raw("<small>CHECK</small><br /><strong>NEW</strong><br /><strong>GIGS</strong>"), event_list_path, data: {fancybox_width: 850}, class: 'fancybox btn btn-success', onclick: 'if(isMobile.any()){$("body").addClass("no-scroll");}' %>
        <%= link_to raw("<strong>JOIN</strong><br /><small>TODAY</small>"), new_user_registration_path, data: { fancybox_width: 600, autoSize: false }, class: 'fancybox btn btn-success join-today', onclick: 'if(isMobile.any()){$("body").addClass("no-scroll");}' %>
        <% end %>
      </div>
  </div>
</header>